{
	"version": 2,
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank Canvas",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "template-no-title",
			"title": "Pagina zonder title",
			"postTypes": [
				"page"
			]
		}
	],
	"patterns": [ "short-text-surrounded-by-round-images", "partner-logos" ],
	"settings": {
		"color": {
			"defaultGradients": false,
			"defaultDuotone": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Primary",    "slug": "primary",    "color": "#19a484" },
				{ "name": "Black", 	    "slug": "black", 	  "color": "#37342b" },
				{ "name": "Dark Grey",  "slug": "dark-grey",  "color": "#7F7F7F" },
				{ "name": "Grey", 	    "slug": "grey", 	  "color": "#CCCCCC" },
				{ "name": "Light Grey", "slug": "light-grey", "color": "#f8f4ec" },
				{ "name": "White", 	    "slug": "white", 	  "color": "#fffdf6" }
			],
			"custom": true,
			"gradients": [],
			"customGradient": true,
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#37342b", "#fffdf6" ] }
			],
			"customDuotone": false
		},
		"typography": {
			"fontFamilies": [
				{
					"slug": "body-font",
					"name": "Body (System Font)",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"slug": "heading-font",
					"name": "Headings (Source Serif 4)",
					"fontFamily": "\"Source Serif 4\", serif",
					"fontFace": [
						{
							"fontFamily": "Source Serif 4",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-serif-4/source-serif-4-v7-latin-700.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "1rem" },
				{ "name": "Medium",   "slug": "medium",   "size": "clamp(1rem, 2vw, 1.25rem)" },
				{ "name": "Large",    "slug": "large",    "size": "clamp(1.25rem, 3vw, 1.75rem)" },
				{ "name": "X-large",  "slug": "x-large",  "size": "clamp(1.5rem, 4vw, 2.5rem)" },
				{ "name": "XX Large", "slug": "xx-large", "size": "clamp(1.75rem, 4vw, 4rem)" }
			],
			"customFontSize": false,
            "lineHeight": false,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "60rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"border": {
				"radius": "10px",
				"color": "var(--wp--preset--color--grey)"
			},
			"spacing": {
				"outer-site-horizontal": "clamp(1.5rem, 7vw, 5rem)",
				"header-vertical": "clamp(2rem, 7vw, 4rem)",
				"main-vertical": "clamp(1.5rem, 7vw, 4rem)",
				"footer-vertical": "clamp(2rem, 7vw, 4rem)",

				"block-gap": "clamp(1.75rem, 4vw, 2.5rem)",
				"block-gap-large": "clamp(2.25rem, 6vw, 3.75rem)",
				"block-gap-small": "clamp(1.5rem, 2vw, 2rem)",

				"post-title-top": "calc( 0 * var(--wp--custom--spacing--block-gap) )",
				"post-title-bottom": "calc( 1.75 * var(--wp--custom--spacing--block-gap) )",
				"alignwide-vertical": "clamp(1.5rem, 5vw, 3.125rem)",
				"alignfull-vertical": "clamp(2.25rem, 6vw, 3.75rem)"
			},
			"typography": {
				"font-size": {
					"colossal": "clamp(2.25rem, 4.5vw, 4rem)"
				},
				"line-height": {
					"tiny": 1.1,
					"small": 1.2,
					"medium": 1.4,
					"normal": 1.725
				}
			},
			"form" : {
				"padding": "0.25rem 0.5rem"
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": 	  "var(--wp--preset--color--black)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body-font)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--block-gap)"
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "var(--wp--custom--border--radius)"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"spacing": {
					"padding": "calc(.375em + 2px) calc(0.875em + 2px)"
				}
			},
			"core/cover": {
				"border": {
					"radius": "0"
				}
			},
			"core/image": {
				"border": {
					"radius": "var(--wp--custom--border--radius)"
				}
			},
			"core/pullquote": {
				"border": {
					"width": "1px 0"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--custom--border--color)",
					"width": "4px"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--style--block-gap)"
					},
					"padding": {
						"left": "var(--wp--custom--spacing--block-gap)",
						"top": "1px",
						"bottom": "1px"
					}
				},
				"typography": {
					"fontStyle": "italic"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--custom--typography--font-size--colossal)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading-font)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontWeight": "700",
					"textTransform": "uppercase",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--body-font)",
					"fontWeight": "400",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		}
	}
}
