{
	"version": 2,
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank Canvas",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "template-no-title",
			"title": "Pagina zonder title",
			"postTypes": [
				"page"
			]
		}
	],
	"settings": {
		"color": {
			"defaultGradients": false,
			"defaultDuotone": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Black", "slug": "black", "color": "#000000" },
				{ "name": "White", "slug": "white", "color": "#ffffff" },
				{ "name": "Primary", 	"slug": "primary",	  "color": "#144771" },
				{ "name": "Secondary", 	"slug": "secondary",  "color": "#eeeff2" },
				{ "name": "Tertiary", 	"slug": "tertiary",	  "color": "#b5ab52" }
			],
			"custom": true,
			"gradients": [],
			"customGradient": false,
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			],
			"customDuotone": false
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "System Font",
					"slug": "system-font",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Source Serif Pro",
					"slug": "source-serif-pro",
					"fontFamily": "\"Source Serif Pro\", serif",
					"fontFace": [
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Roman.ttf.woff2" ]
						},
						{
							"fontFamily": "Source Serif Pro",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/source-serif-pro/SourceSerif4Variable-Italic.ttf.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "1rem" },
				{ "name": "Medium",   "slug": "medium",   "size": "clamp(1rem, 2vw, 1.125rem)" },
				{ "name": "Large",    "slug": "large",    "size": "clamp(1.25rem, 2vw, 1.625rem)" },
				{ "name": "X-large",  "slug": "x-large",  "size": "clamp(1.5rem, 3vw, 2.375rem)" },
				{ "name": "XX Large", "slug": "xx-large", "size": "clamp(1.75rem, 3vw, 4rem)" }
			],
			"customFontSize": false,
            "lineHeight": false,
            "fontStyle": false,
			"fontWeight": false,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "60rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"layout": {
				"mainSize": "68rem"
			},
			"spacing": {
				"outer-site-horizontal": "clamp(1.5rem, 7vw, 5rem)",
				"header-vertical": "clamp(2rem, 7vw, 4rem)",
				"main-vertical": "clamp(1.5rem, 7vw, 4rem)",
				"footer-vertical": "clamp(2rem, 7vw, 4rem)",

				"block-gap": "clamp(1.75rem, 4vw, 2.5rem)",
				"block-gap-large": "clamp(1.75rem, 6vw, 3.75rem)",

				"post-title-top": "calc( 0 * var(--wp--custom--spacing--block-gap) )",
				"post-title-bottom": "calc( 1.75 * var(--wp--custom--spacing--block-gap) )",
				"alignwide-vertical": "clamp(1.5rem, 5vw, 3.125rem)",
				"alignfull-vertical": "clamp(2.25rem, 6vw, 3.75rem)"
			},
			"typography": {
				"font-size": {
					"colossal": "clamp(2.25rem, 4.5vw, 4rem)"
				},
				"line-height": {
					"tiny": 1,
					"small": 1.2,
					"medium": 1.4,
					"normal": 1.725
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": 	  "var(--wp--preset--color--foreground)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--custom--spacing--block-gap)"
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/pullquote": {
				"border": {
					"width": "1px 0"
				}
			},
			"core/quote": {
				"border": {
					"color": "var(--wp--preset--color--secondary)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--style--block-gap)"
					},
					"padding": {
						"left": "var(--wp--style--block-gap)"
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--custom--typography--font-size--colossal)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontWeight": "700",
					"textTransform": "uppercase",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				}
			}
		}
	}
}
